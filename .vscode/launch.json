    "version": "0.2.0",
    "configurations": [
        {
            "command": "yarn run start",
            "name": "Run yarn run start",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/Frontend"
        },
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Backend/Artisashop/bin/Debug/net6.0/Artisashop.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Backend/Artisashop",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
}